<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcommerceConcept" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/mainBackgroundColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="fontFamily">@font/mark_pro_font_family</item>

        <item name="android:windowBackground">@drawable/splash</item>


    </style>

    <style name="roundedCorners50" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="roundedCorners30" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>


    <style name="roundedCorners10" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="My.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="background">"@drawable/oval"</item>
        <item name="backgroundTint">@color/button_background_color_selector</item>
        <item name="iconTint">@color/button_icon_color_selector</item>
    </style>

    <style name="CustomImageButton" parent="">
        <item name="background">"@drawable/oval"</item>
        <item name="backgroundTint">@color/button_background_color_selector</item>
        <item name="iconTint">@color/button_icon_color_selector</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="backgroundTint">@color/button_background_color_selector</item>

    </style>

</resources>