<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/itemCategoriesIconBackground"
        android:layout_width="71dp"
        android:layout_height="71dp"
        app:srcCompat="@drawable/oval"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/itemCategoriesIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/itemCategoriesIconBackground"
        app:layout_constraintEnd_toEndOf="@id/itemCategoriesIconBackground"
        app:layout_constraintTop_toTopOf="@id/itemCategoriesIconBackground"
        app:layout_constraintBottom_toBottomOf="@id/itemCategoriesIconBackground"
        app:srcCompat="@drawable/ic_phones"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/itemCategoriesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemCategoriesIconBackground"
        app:layout_constraintStart_toStartOf="@id/itemCategoriesIconBackground"
        app:layout_constraintEnd_toEndOf="@id/itemCategoriesIconBackground"
        tools:text="Phones"
        />


</androidx.constraintlayout.widget.ConstraintLayout>